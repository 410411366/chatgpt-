{
    "manifest_version": 2,
    "name": "Topics",
    "version": "1.0",
    "description": "This is a description of my extension.",
    "permissions": [
      "tabs",
      "activeTab",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icon.png",
      "128": "icon_128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }